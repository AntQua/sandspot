<div class = "mt-5 mb-5 border shadow rounded-4 bg-white p-3">
  <ul class="nav nav-tabs packs-card" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link border-top-0 border-end-0 border-start-0 active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Basic</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link border-top-0 border-end-0 border-start-0" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Standard</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link border-top-0 border-end-0 border-start-0" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Premium</button>
    </li>
  </ul>
  <div class="tab-content packs-card" id="myTabContent">

    <div class="tab-pane fade show active p-3" id="home" role="tabpanel" aria-labelledby="home-tab" data-controller = "confirm-booking">
      <h3 class = "text-center"><strong><%= @beach.packs[0].price %></strong>€ day</h3>
      <h5>Description</h4>
      <ul>
       <% @beach.packs[0].description.split("-").each do |bullet| %>
        <li><%= bullet %></li>
        <% end %>
      </ul>

      <%= simple_form_for [@beach.packs[0],@booking] do |f| %>
       <%= f.input :date, as: :string, label: "When do you want to go?", input_html: { data: { controller: "datepicker", confirm_booking_target: "date" }, placeholder: "Select a date" } %>
        <button type="button" class="button-packs" data-bs-toggle="modal" data-bs-target="#exampleModal" data-action="click->confirm-booking#getDate" >
          Book Now
        </button>

       <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content border shadow rounded-4">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Your Booking Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <p><strong>Beach:</strong> <%= @beach.name %></p>
                <p><strong>Pack:</strong> <%= @beach.packs[0].name %></p>
                <p><strong>Date:</strong> <span data-confirm-booking-target = "modalDate"></span></p>
                <p><strong>Price:</strong> <%= @beach.packs[0].price %>€</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="modal-cancel-btn" data-bs-dismiss="modal">Cancel Booking</button>
                 <%= f.submit "Confirm Booking", class: "modal-confirm-btn" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="tab-pane fade p-3" id="profile" role="tabpanel" aria-labelledby="profile-tab" data-controller = "confirm-booking">
